generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("NEON_DATABASE_URL")
}

model User {
  id       String   @id @default(uuid())
  email    String   @unique
  name     String
  password String
}

model Todo {
  id        String @id @default(uuid())
  title     String
  completed Boolean @default(false)
  description String
  userId    Int
}